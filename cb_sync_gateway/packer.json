{
  "builders": [{
    "type": "amazon-ebs",
    "region": "us-west-2",
    "source_ami": "ami-4836a428",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "cb_sync_gateway {{timestamp}}",
    "associate_public_ip_address": "true"
  }],
  "provisioners": [
  {
      "type": "file",
      "source": "sync_gateway.json",
      "destination": "/tmp/sync_gateway.json"
  },
  {
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo yum -y update",
      "sudo yum -y upgrade",
      "wget http://packages.couchbase.com/releases/couchbase-sync-gateway/1.4.1/couchbase-sync-gateway-community_1.4.1-3_x86_64.rpm",
      "sudo rpm -i couchbase-sync-gateway-community_1.4.1-3_x86_64.rpm",
      "sudo cp /tmp/sync_gateway.json /opt/sync_gateway/etc/sync_gateway.json"
    ]
  }]
}